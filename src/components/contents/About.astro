---
import Image from '../ui/Image';
import qianhuiImage from '../../assets/qianhui.jpg';
import Wrapper from '../../layouts/Wrapper';
import { Caption, Heading, Paragraph } from '../ui/typography';
import { ItemInViewAnimation } from '../ui/InViewAnimation'
---

<section id="about" class="w-full flex flex-col lg:grid lg:grid-cols-2">
  <Image
    client:idle
    metadata={qianhuiImage}
    alt="Myself, Qianhui, photoed at Apgujyong in Korea"
    className="inset-0 max-h-screen w-full object-cover object-center"
  />
  <Wrapper className="h-full my-20 flex flex-col justify-center lg:my-0">
      <ItemInViewAnimation delay={0.1} client:visible >
        <Caption>
          ABOUT
        </Caption>
        <Heading >
          👋🏻Hi there! I'm Qianhui,
        </Heading>
        <Paragraph>
          a front-end devloper and HCI researcher currently based in Notre Dame, Indiana, the US.
        </Paragraph>
      </ItemInViewAnimation>
  </Wrapper>
</section>