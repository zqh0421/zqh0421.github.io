---
import { projectList } from '../../components/contents/Projects.astro';
import BasicLayout from '../../layouts/BasicLayout.astro';
import Wrapper from '../../layouts/Wrapper';
import { Caption, Heading, Paragraph } from '../../components/typography';
import { ItemInViewAnimation } from '../../components/InViewAnimation'
import ShortestContent from '../../components/contents/projects/ShortestContent.astro'
import CodegptContent from '../../components/contents/projects/CodegptContent.astro';

export function getStaticPaths() {
  return projectList.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

interface ProjectProps {
	title: string;
	desc: string;
	href: string;
  time: string;
  location: string;
  tags: string[];
  cover: string;
  content?: any;
}

export interface Props {
  project: ProjectProps;
}

const { slug } = Astro.params;
const { project } = Astro.props;

---

<BasicLayout
  title={`${project.title} â€• Qianhui`}
  description={project.desc}
>
  <article id="article" class="bg-neutral-50 w-full h-full">
    <Wrapper className='border-b-[0.5px] border-neutral-600 py-28'>
      <ItemInViewAnimation className="flex flex-col items-center text-center justify-center" delay={0.1} client:visible >
          <Caption>{project.location}</Caption>
          <Heading>{project.title}</Heading>
          <Paragraph className={'inline-block'}>{project.desc}</Paragraph>
      </ItemInViewAnimation>
      <ItemInViewAnimation className="flex flex-col items-center text-center" delay={0.1} client:visible >
        <img src={project.cover} class="w-full my-8" />
      </ItemInViewAnimation>
      {
        slug === "shortest" ? <ShortestContent /> :
        slug === "codegpt" ? <CodegptContent /> :
        null
      }
    </Wrapper>
  </article>
</BasicLayout>../../contents/Projects.astro../../contents/projects/ShortestContent.astro